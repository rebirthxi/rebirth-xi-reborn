{
    "tasks": [
        {
            "label": "Kill xi_connect",
            "type": "shell",
            "linux": {
                "command": "killall",
                "args": [
                    "xi_connect",
                    "||",
                    "exit",
                    "0",
                ]
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C",
                    "taskkill /F /IM xi_connect.exe || exit 0",
                ]
            },
            "presentation": {
                "reveal": "never",
                "close": true,
            }
        },
        {
