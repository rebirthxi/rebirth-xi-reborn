        },
        {
            "label": "Create Build Dir",
            "type": "shell",
            "linux": {
                "command": "mkdir -p ./build/"
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C",
                    "if not exist .\\build mkdir .\\build",
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "never",
                "close": true,
            }
        },
        {
            "type": "shell",
            "label": "CMake Configuration",
            "dependsOn": [
                "Kill xi_connect",
                "Kill xi_map",
                "Kill xi_search",
                "Kill xi_world",
                "Create Build Dir"
            ],
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "type": "shell",
            "label": "CMake Build",
            "dependsOn": [
                "CMake Configuration"
            ],
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}